<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:background">@drawable/bkg</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="textoInicio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="textoNivel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAlignment">inherit</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="botonControles">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="botonTexto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/textTerciary</item>
    </style>

</resources>
