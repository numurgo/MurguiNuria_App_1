<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/level_instruct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".NivelSuperado">

    <ScrollView
        android:id="@+id/scrollNivelSuperado"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/level_instruct_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="@string/level_1"
                android:textColor="@color/textTerciary"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/imagen_nivel_superado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/muebles" />

            <TextView
                android:id="@+id/infoNivel"
                style="@style/textoNivel"
                android:layout_height="wrap_content"
                android:text="@string/text_level_1" />

            <LinearLayout
                android:id="@+id/botonesLevel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bPantallaNiveles"
                    style="@style/botonTexto"
                    android:clickable="true"
                    android:onClick="volverNiveles"
                    android:text="SelecciÃ³n niveles"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/bNivelSiguiente"
                    style="@style/botonTexto"
                    android:clickable="true"
                    android:text="Siguiente nivel"
                    android:textAlignment="textEnd"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>